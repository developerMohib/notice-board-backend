# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/notice_board_db
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password
DB_NAME=notice_board

# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=7d

# API Configuration
API_VERSION=v1
API_BASE_URL=http://localhost:5000

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
MAIL_FROM=noreply@noticeboard.com

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=debug

# CORS
CORS_ORIGIN=http://localhost:3000